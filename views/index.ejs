<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>EcoDescarte</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
    }
    </style>
</head>
<body class="bg-light">

  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">♻️ EcoDescarte</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Início</a></li>
          <li class="nav-item"><a class="nav-link" href="/locais">Locais de Coleta</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="flex-gow-1">
  <div class="container py-5">
    <h2 class="mb-4 text-success">Escolha o material:</h2>
    <div class="row g-4">
      <% for (let tipo in materiais) { %>
        <div class="col-md-4">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
              <h5 class="card-title"><%= materiais[tipo].nome %></h5>
              <a href="/material/<%= tipo %>" class="btn btn-outline-success mt-3">Como descartar</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  </main>
  <footer class="bg-success text-white text-center py-3 mt-5">
    <small>Ecodescarte © 2025 — Desenvolvido por Arthur, Elias e Mateus</small>
  </footer>
</body>
</html>
