<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Locais de Coleta</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
    }
    </style>
</head>
<body class="bg-light">

  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">♻️ Descarte Consciente</a>
    </div>
  </nav>
<main class="flex-gow-1">
  <div class="container py-5">
    <h1 class="text-success mb-4">Locais de Coleta</h1>
    <div class="list-group">
      <% locais.forEach(local => { %>
        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <div>
            <strong><%= local.nome %></strong> - <%= local.material %><br/>
            <small class="text-muted"><%= local.endereco %></small>
          </div>
        </div>
      <% }) %>
    </div>
    <br/><a href="/" class="btn btn-outline-success">Voltar para o ínicio</a>
  </div>
    </main>
    <footer class="bg-success text-white text-center py-3 mt-5">
    <small>Ecodescarte © 2025 — Desenvolvido por Arthur, Elias e Mateus</small>
    </footer>
</body>
</html>
